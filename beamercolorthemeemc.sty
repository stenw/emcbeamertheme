\newcommand{\@emc@colors@darkblue}{
 \setbeamercolor{palette primary}{fg=white, bg=emcdblue}
 \setbeamercolor{palette secondary}{fg=white, bg=emclblue}
 \setbeamercolor{palette tertiary}{fg=emclblue, bg=emcdblue}
 \setbeamercolor{palette quaternary}{fg=emcdblue, bg=white}
 \setbeamercolor{structure}{fg=white, bg=emcdblue}
 \pgfdeclareimage[width=35mm]{fg:logo}{Logo1DB.pdf} 
 \pgfdeclareimage[width=1cm]{fg:logoNoText}{logo2NoTextDB.pdf} 
}
\newcommand{\@emc@colors@lightblue}{
 \setbeamercolor{palette primary}{fg=emcdblue, bg=emclblue}
 \setbeamercolor{palette secondary}{fg=emcdblue, bg=white}
 \setbeamercolor{palette tertiary}{fg=black, bg=white}
 \setbeamercolor{palette quaternary}{fg=emclblue, bg=emcdblue}
 \setbeamercolor{structure}{fg=emcdblue, bg=emclblue}
 \pgfdeclareimage[width=35mm]{fg:logo}{Logo1LB.pdf} 
 \pgfdeclareimage[width=1cm]{fg:logoNoText}{logo2NoTextLB.pdf}
}
\newcommand{\@emc@colors@white}{
 \setbeamercolor{palette primary}{fg=emcdblue, bg=white}
 \setbeamercolor{palette secondary}{fg=emcdblue,bg=emclblue}
 \setbeamercolor{palette tertiary}{fg=black, bg=emclblue}
 \setbeamercolor{palette quaternary}{fg=white, bg=emcdblue}
 \setbeamercolor{structure}{fg=emcdblue, bg=white}
