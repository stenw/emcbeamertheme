\insertframenumber\,/\,\inserttotalframenumber 
%	{\pgftext[at=\pgfpointxy{0}{0.4},right,base]%
%	{\pgfuseimage{fg:logoNoText}}%
%	}%
\end{beamercolorbox}}%
\vskip0pt%
\fi
}


